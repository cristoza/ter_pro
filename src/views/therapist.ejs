</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let allAppointments = [];
    let currentDate = new Date(); // Tracks displayed month
    let selectedDate = new Date(); // Tracks selected day
    
    // Reset time to start of day for accurate comparisons
    selectedDate.setHours(0,0,0,0);
    currentDate.setDate(1); // Set to first of month for calendar logic

    const monthNames = ["enero", "febrero", "marzo", "abril", "mayo", "junio",
        "julio", "agosto", "septiembre", "octubre", "noviembre", "diciembre"
    ];

    // Initial Fetch
    fetch('/therapist/appointments')
        .then(response => response.json())
        .then(data => {
            allAppointments = data;
            console.log('Appointments loaded:', allAppointments.length);
            updateStats();
            renderCalendar();
            renderAgenda(selectedDate);
            updateSelectedDateInfo(selectedDate);
        })
        .catch(error => console.error('Error fetching appointments:', error));

    function updateStats() {
        const todayStr = formatDateIso(new Date());
        
        // Count today's appointments
        const todayCount = allAppointments.filter(app => app.date === todayStr).length;
        document.getElementById('today-count').textContent = todayCount;
        
        // Count upcoming (future dates or today later times)
        const upcomingCount = allAppointments.filter(app => app.date > todayStr).length;
        document.getElementById('upcoming-count').textContent = upcomingCount;
    }

    function renderCalendar() {
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        
        document.getElementById('current-month-year').textContent = `${monthNames[month]} ${year}`;
        
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        
        const daysInMonth = lastDay.getDate();
        
        // Standard JS getDay(): 0=Sun, 1=Mon...
        // We want 0=Mon, 1=Tue... 6=Sun
        let startDay = firstDay.getDay() - 1; 
        if (startDay === -1) startDay = 6;
        
        const grid = document.getElementById('days-grid');
        grid.innerHTML = '';
        
        // Create previous month fillers
        for (let i = 0; i < startDay; i++) {
            const div = document.createElement('div');
            div.className = 'day-cell empty';
            grid.appendChild(div);
        }
        
        // Days
        for (let d = 1; d <= daysInMonth; d++) {
            const div = document.createElement('div');
            div.className = 'day-cell';
            div.textContent = d;
            
            // Reconstruct date string for comparison
            // Note: Use local timezone construction to avoid offsetting
            const checkDate = new Date(year, month, d);
            checkDate.setHours(0,0,0,0);
            
            const today = new Date();
            today.setHours(0,0,0,0);

            if (checkDate.getTime() === today.getTime()) {
                div.classList.add('today');
            }
            
            if (checkDate.getTime() === selectedDate.getTime()) {
                div.classList.add('selected');
            }
            
            // Interaction
            div.onclick = () => {
                selectedDate = new Date(year, month, d);
                // Also update currentDate to match selected if needed, but usually calendar stays on month view
                renderCalendar(); 
                renderAgenda(selectedDate);
                updateSelectedDateInfo(selectedDate);
            };
            
            grid.appendChild(div);
        }
    }

    function updateSelectedDateInfo(date) {
        // Format date as YYYY-MM-DD for filtering
        const dateStr = formatDateIso(date);
        const count = allAppointments.filter(a => a.date === dateStr).length;
        
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        const spanishDate = date.toLocaleDateString('es-ES', options);
        
        const info = document.getElementById('selected-date-info');
        info.innerHTML = `
            <div style="font-weight: bold; text-transform: capitalize; margin-bottom: 4px;">${spanishDate}</div>
            <div style="color: var(--muted-text);">${count} citas programadas</div>
        `;
    }

    function renderAgenda(date) {
        const dateStr = formatDateIso(date);
        // Format for display
        const spanishDate = date.toLocaleDateString('es-ES', { day: 'numeric', month: 'long' });
        
        document.getElementById('agenda-date-subtitle').textContent = `Citas programadas para ${spanishDate}`;
        
        const appointments = allAppointments.filter(app => app.date === dateStr);
        // Sort by time
        appointments.sort((a,b) => a.time.localeCompare(b.time));
        
        const listContainer = document.getElementById('appointments-list');
        listContainer.innerHTML = '';
        
        if (appointments.length === 0) {
            listContainer.innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">ðŸ“…</div>
                    <p>No hay citas programadas para este dÃ­a</p>
                </div>
            `;
            return;
        }
        
        appointments.forEach(app => {
            const el = document.createElement('div');
            el.className = 'appointment-item';
            
            // Determine machine/type
            const machineType = app.machine ? app.machine.type : 'General';
            
            el.innerHTML = `
                <div class="time-slot">${app.time.slice(0,5)}</div>
                <div class="appointment-details">
                    <span class="patient-name">${app.patientName}</span>
                    <div class="patient-info">
                        DuraciÃ³n: ${app.durationMinutes} min
                        <br>
                        <span class="machine-badge">${machineType}</span>
                        ${app.notes ? `<div style="margin-top:4px; font-style:italic;">Nota: ${app.notes}</div>` : ''}
                    </div>
                </div>
            `;
            listContainer.appendChild(el);
        });
    }
    
    // Helper to format Date object to YYYY-MM-DD local string
    function formatDateIso(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

    document.getElementById('prev-month').addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    });
    
    document.getElementById('next-month').addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    });
});

</script>
