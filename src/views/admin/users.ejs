<!DOCTYPE html>
<%- include('../layout', { header: 'start' }) %>

<div class="container">
    <h1>Gestión de Usuarios</h1>

    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <% if (success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>

    <!-- Create User Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h2>Crear Nuevo Usuario</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/users">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="username">Usuario *</label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="username" 
                                name="username" 
                                required
                                pattern="[a-zA-Z0-9._-]+"
                                title="Solo letras, números, puntos, guiones bajos y guiones"
                            >
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="password">Contraseña *</label>
                            <input 
                                type="password" 
                                class="form-control" 
                                id="password" 
                                name="password" 
                                required
                                minlength="6"
                            >
                            <small class="form-text text-muted">Mínimo 6 caracteres</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="role">Rol *</label>
                            <select class="form-control" id="role" name="role" required>
                                <option value="">Seleccione un rol</option>
                                <option value="admin">Admin</option>
                                <option value="doctor">Doctor</option>
                                <option value="secretary">Secretaria</option>
                                <option value="therapist">Terapeuta</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="therapistId">Terapeuta (si rol = terapeuta)</label>
                            <select class="form-control" id="therapistId" name="therapistId">
                                <option value="">Ninguno</option>
                                <% therapists.forEach(therapist => { %>
                                    <option value="<%= therapist.id %>"><%= therapist.name %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
            </form>
        </div>
    </div>

    <!-- Users List -->
    <div class="card">
        <div class="card-header">
            <h2>Usuarios Existentes</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th>Terapeuta Vinculado</th>
                            <th>Creado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.id %></td>
                                    <td><%= user.username %></td>
                                    <td>
                                        <span class="badge badge-<%= 
                                            user.role === 'admin' ? 'danger' : 
                                            user.role === 'doctor' ? 'primary' : 
                                            user.role === 'therapist' ? 'success' : 
                                            'info' 
                                        %>">
                                            <%= user.role.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (user.therapist) { %>
                                            <%= user.therapist.name %>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <!-- Password Update Button -->
                                        <button 
                                            type="button" 
                                            class="btn btn-sm btn-warning" 
                                            data-toggle="modal" 
                                            data-target="#passwordModal<%= user.id %>"
                                        >
                                            Cambiar Contraseña
                                        </button>
                                        
                                        <!-- Delete Button (disabled for admin user) -->
                                        <% if (user.username !== 'admin') { %>
                                            <form method="POST" action="/admin/users/<%= user.id %>/delete" style="display:inline;">
                                                <button 
                                                    type="submit" 
                                                    class="btn btn-sm btn-danger"
                                                    onclick="return confirm('¿Está seguro que desea eliminar al usuario <%= user.username %>?')"
                                                >
                                                    Eliminar
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-secondary" disabled title="No se puede eliminar el admin predeterminado">
                                                Eliminar
                                            </button>
                                        <% } %>

                                        <!-- Password Modal -->
                                        <div class="modal fade" id="passwordModal<%= user.id %>" tabindex="-1" role="dialog">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Cambiar Contraseña para <%= user.username %></h5>
                                                        <button type="button" class="close" data-dismiss="modal">
                                                            <span>&times;</span>
                                                        </button>
                                                    </div>
                                                    <form method="POST" action="/admin/users/<%= user.id %>/password">
                                                        <div class="modal-body">
                                                            <div class="form-group">
                                                                <label for="newPassword<%= user.id %>">Nueva Contraseña</label>
                                                                <input 
                                                                    type="password" 
                                                                    class="form-control" 
                                                                    id="newPassword<%= user.id %>" 
                                                                    name="newPassword" 
                                                                    required
                                                                    minlength="6"
                                                                >
                                                                <small class="form-text text-muted">Mínimo 6 caracteres</small>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                            <button type="submit" class="btn btn-primary">Actualizar Contraseña</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">No se encontraron usuarios</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }
    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }
    .card {
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .card-header {
        padding: 15px;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
    }
    .card-header h2 {
        margin: 0;
        font-size: 1.25rem;
    }
    .card-body {
        padding: 15px;
    }
    .badge {
        padding: 5px 10px;
        border-radius: 3px;
        font-size: 0.75rem;
        font-weight: bold;
    }
    .badge-danger {
        background-color: #dc3545;
        color: white;
    }
    .badge-primary {
        background-color: #007bff;
        color: white;
    }
    .badge-success {
        background-color: #28a745;
        color: white;
    }
    .badge-info {
        background-color: #17a2b8;
        color: white;
    }
    .modal {
        display: none;
        position: fixed;
        z-index: 1050;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        outline: 0;
        background-color: rgba(0,0,0,0.5);
    }
    .modal.show {
        display: block;
    }
    .modal-dialog {
        position: relative;
        width: auto;
        margin: 10% auto;
        max-width: 500px;
    }
    .modal-content {
        background-color: #fff;
        border: 1px solid rgba(0,0,0,.2);
        border-radius: 6px;
        outline: 0;
    }
    .modal-header {
        padding: 15px;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .modal-title {
        margin: 0;
        font-size: 1.25rem;
    }
    .modal-body {
        padding: 15px;
    }
    .modal-footer {
        padding: 15px;
        border-top: 1px solid #dee2e6;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }
    .close {
        background: none;
        border: 0;
        font-size: 1.5rem;
        cursor: pointer;
    }
</style>

<script>
    // Simple modal functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Open modals
        document.querySelectorAll('[data-toggle="modal"]').forEach(button => {
            button.addEventListener('click', function() {
                const targetId = this.getAttribute('data-target');
                const modal = document.querySelector(targetId);
                if (modal) {
                    modal.classList.add('show');
                }
            });
        });

        // Close modals
        document.querySelectorAll('[data-dismiss="modal"]').forEach(button => {
            button.addEventListener('click', function() {
                const modal = this.closest('.modal');
                if (modal) {
                    modal.classList.remove('show');
                }
            });
        });

        // Close modal on background click
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.remove('show');
                }
            });
        });

        // Role-based therapist field visibility
        const roleSelect = document.getElementById('role');
        const therapistField = document.getElementById('therapistId').parentElement;
        
        roleSelect.addEventListener('change', function() {
            if (this.value === 'therapist') {
                therapistField.style.display = 'block';
                document.getElementById('therapistId').required = true;
            } else {
                therapistField.style.display = 'none';
                document.getElementById('therapistId').required = false;
                document.getElementById('therapistId').value = '';
            }
        });

        // Initialize visibility on page load
        if (roleSelect.value !== 'therapist') {
            therapistField.style.display = 'none';
        }
    });
</script>

<%- include('../layout', { header: 'end' }) %>
