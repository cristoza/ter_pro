<%- include('./layout-simple') %>

<div style="max-width: 1200px; margin: 0 auto;">
  <!-- Header -->
  <div style="text-align: center; margin-bottom: 32px;">
    <h1>Panel de Secretar√≠a</h1>
    <p class="muted" style="font-size: 16px; margin-bottom: 16px;">Ver y gestionar todos los horarios de terapistas</p>
    <a href="/secretary/patients" class="btn btn-primary">üîç Buscar Pacientes</a>
  </div>

  <!-- Filters Card -->
  <div class="card" style="margin-bottom: 24px;">
    <div class="card-header">
      <h2>Filtros de B√∫squeda</h2>
    </div>
    <div style="padding: 20px;">
      <div class="form-row">
        <div class="form-group">
          <label for="filter-therapist">Filtrar por Terapista</label>
          <select id="filter-therapist" style="width: 100%;">
            <option value="">Todos los Terapistas</option>
          </select>
        </div>
        <div class="form-group">
          <label for="filter-date">Filtrar por Fecha</label>
          <input type="date" id="filter-date" style="width: 100%;">
        </div>
        <div class="form-group">
          <label for="filter-week">Filtrar por Semana</label>
          <input type="week" id="filter-week" style="width: 100%;">
        </div>
      </div>
      <div style="text-align: center; margin-top: 16px;">
        <button id="clear-filters" class="btn btn-secondary">Limpiar Filtros</button>
      </div>
    </div>
  </div>

  <!-- Results Card -->
  <div class="card">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 12px;">
      <div>
        <h2 style="margin: 0;">Horarios</h2>
        <p style="margin: 4px 0 0 0; color: var(--muted); font-size: 14px; font-weight: normal;">
          <span id="appointment-count">0</span> citas mostradas
        </p>
      </div>
      <button id="export-csv" class="btn" style="background: #27ae60;">Exportar a CSV</button>
    </div>
    <div class="table-responsive">
      <table id="schedule-table" data-role="secretary">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Duraci√≥n</th>
            <th>Terapista</th>
            <th>Paciente</th>
            <th>Contacto</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div id="edit-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Editar Cita</h3>
        <button type="button" class="close" onclick="closeEditModal()">&times;</button>
      </div>
      <form id="edit-form">
        <div class="modal-body">
          <input type="hidden" id="edit-id" />
          <div class="form-group">
            <label for="edit-date">Fecha</label>
            <input type="date" id="edit-date" required />
          </div>
          <div class="form-group">
            <label for="edit-time">Hora</label>
            <input type="time" id="edit-time" required />
          </div>
          <div class="form-group">
            <label for="edit-duration">Duraci√≥n (minutos)</label>
            <input type="number" id="edit-duration" min="15" max="180" required />
          </div>
          <div class="form-group">
            <label for="edit-patient">Nombre del Paciente</label>
            <input type="text" id="edit-patient" required />
          </div>
          <div class="form-group">
            <label for="edit-contact">Contacto</label>
            <input type="text" id="edit-contact" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancelar</button>
          <button type="submit" class="btn">Guardar Cambios</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
.modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  overflow: auto;
}

.modal.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-dialog {
  background: white;
  border-radius: 12px;
  width: 90%;
  max-width: 500px;
  margin: 20px;
}

.modal-content {
  padding: 0;
}

.modal-header {
  padding: 20px 24px;
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header h3 {
  margin: 0;
  font-size: 20px;
}

.modal-body {
  padding: 24px;
}

.modal-footer {
  padding: 16px 24px;
  border-top: 1px solid var(--border);
  display: flex;
  justify-content: flex-end;
  gap: 12px;
}

.close {
  background: none;
  border: none;
  font-size: 28px;
  cursor: pointer;
  color: var(--muted);
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
  transition: all 0.2s;
}

.close:hover {
  background: var(--bg-secondary);
  color: var(--text);
}
</style>

<script>
async function api(path, method = 'GET', body) {
  const opts = { method, headers: { 'Content-Type': 'application/json' } };
  if (body) opts.body = JSON.stringify(body);
  const res = await fetch(path, opts);
  if (!res.ok) throw new Error(await res.text());
  return res.status === 204 ? null : res.json();
}

function escapeHtml(str) {
  if (str === null || str === undefined) return '';
  return String(str)
    .replace(/&/g, '&amp;')
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;')
    .replace(/"/g, '&quot;')
    .replace(/'/g, '&#039;');
}

let allAppointments = [];
let allTherapists = [];

async function loadData() {
  const tbody = document.querySelector('#schedule-table tbody');
  try {
    // Load both appointments and therapists
    [allAppointments, allTherapists] = await Promise.all([
      api('/secretary/appointments'),
      api('/secretary/therapists')
    ]);
    
    // Populate therapist filter
    const therapistSelect = document.getElementById('filter-therapist');
    therapistSelect.innerHTML = '<option value="">All Therapists</option>' +
      allTherapists.map(t => `<option value="${t.id}">${escapeHtml(t.name)}</option>`).join('');
    
    renderAppointments(allAppointments);
  } catch (err) {
    console.error(err);
    tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; color: #e74c3c;">Error al cargar las citas</td></tr>';
  }
}

function renderAppointments(appointments) {
  const tbody = document.querySelector('#schedule-table tbody');
  const countEl = document.getElementById('appointment-count');
  
  countEl.textContent = appointments.length;
  
  if (appointments.length === 0) {
    tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; color: #999;">No se encontraron citas</td></tr>';
    return;
  }
  
  tbody.innerHTML = appointments.map(a => `
    <tr>
      <td>${escapeHtml(a.date)}</td>
      <td>${escapeHtml(a.time)}</td>
      <td>${escapeHtml(a.durationMinutes || 45)} min</td>
      <td><strong>${escapeHtml(a.therapist ? a.therapist.name : 'Sin asignar')}</strong></td>
      <td>${escapeHtml(a.patientName || '')}</td>
      <td>${escapeHtml(a.patientContact || '')}</td>
      <td>
        <button class="btn-icon" onclick="editAppointment('${a.id}')" title="Editar">Editar</button>
      </td>
    </tr>
  `).join('');
}

function editAppointment(id) {
  const appointment = allAppointments.find(a => a.id == id);
  if (!appointment) return;
  
  document.getElementById('edit-id').value = appointment.id;
  document.getElementById('edit-date').value = appointment.date;
  document.getElementById('edit-time').value = appointment.time;
  document.getElementById('edit-duration').value = appointment.durationMinutes || 45;
  document.getElementById('edit-patient').value = appointment.patientName || '';
  document.getElementById('edit-contact').value = appointment.patientContact || '';
  
  document.getElementById('edit-modal').classList.add('show');
}

function closeEditModal() {
  document.getElementById('edit-modal').classList.remove('show');
  document.getElementById('edit-form').reset();
}

document.addEventListener('DOMContentLoaded', () => {
  // Edit form submission
  document.getElementById('edit-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const id = document.getElementById('edit-id').value;
    const data = {
      date: document.getElementById('edit-date').value,
      time: document.getElementById('edit-time').value,
      durationMinutes: parseInt(document.getElementById('edit-duration').value),
      patientName: document.getElementById('edit-patient').value,
      patientContact: document.getElementById('edit-contact').value
    };
    
    try {
      await api(`/secretary/api/appointments/${id}`, 'PUT', data);
      closeEditModal();
      await loadData();
      alert('Cita actualizada correctamente');
    } catch (err) {
      console.error(err);
      alert('Error al actualizar la cita');
    }
  });
  
  // Close modal on outside click
  document.getElementById('edit-modal').addEventListener('click', (e) => {
    if (e.target.id === 'edit-modal') {
      closeEditModal();
    }
  });
});

function applyFilters() {
  const therapistId = document.getElementById('filter-therapist').value;
  const date = document.getElementById('filter-date').value;
  const week = document.getElementById('filter-week').value;
  
  let filtered = allAppointments;
  
  // Filter by therapist
  if (therapistId) {
    filtered = filtered.filter(a => a.therapist && a.therapist.id == therapistId);
  }
  
  // Filter by specific date
  if (date) {
    filtered = filtered.filter(a => a.date === date);
  }
  
  // Filter by week
  if (week && !date) {
    const [year, weekNum] = week.split('-W');
    filtered = filtered.filter(a => {
      const d = new Date(a.date + 'T00:00:00');
      const apptYear = d.getFullYear();
      const firstDay = new Date(apptYear, 0, 1);
      const days = Math.floor((d - firstDay) / (24 * 60 * 60 * 1000));
      const apptWeek = Math.ceil((days + firstDay.getDay() + 1) / 7);
      return apptYear == year && apptWeek == weekNum;
    });
  }
  
  renderAppointments(filtered);
}

function exportToCSV() {
  const currentRows = Array.from(document.querySelectorAll('#schedule-table tbody tr'));
  if (currentRows.length === 0 || currentRows[0].cells.length === 1) {
    alert('No hay datos para exportar');
    return;
  }
  
  const headers = ['Fecha', 'Hora', 'Duraci√≥n', 'Terapeuta', 'Nombre del Paciente', 'Contacto'];
  const rows = currentRows.map(row => 
    Array.from(row.cells).map(cell => `"${cell.textContent.trim()}"`).join(',')
  );
  
  const csv = [headers.join(','), ...rows].join('\n');
  const blob = new Blob([csv], { type: 'text/csv' });
  const url = window.URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = `schedule-${new Date().toISOString().split('T')[0]}.csv`;
  a.click();
  window.URL.revokeObjectURL(url);
}

document.addEventListener('DOMContentLoaded', () => {
  loadData();
  
  // Event listeners for filters
  document.getElementById('filter-therapist').addEventListener('change', applyFilters);
  document.getElementById('filter-date').addEventListener('change', applyFilters);
  document.getElementById('filter-week').addEventListener('change', applyFilters);
  
  // Clear filters
  document.getElementById('clear-filters').addEventListener('click', () => {
    document.getElementById('filter-therapist').value = '';
    document.getElementById('filter-date').value = '';
    document.getElementById('filter-week').value = '';
    renderAppointments(allAppointments);
  });
  
  // Export CSV
  document.getElementById('export-csv').addEventListener('click', exportToCSV);
});
</script>
